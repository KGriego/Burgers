<div class="container">
  <div class="row justify-content-center">
    <div class="col col-lg-12">
      <h1 class="text-center">
        Hamburger Eating Time
      </h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col">
      <h2>Hamburgers that you have not yet eaten!</h2>

      <ul>
        {{#each burgers}} {{#unless devoured}}
        <li>
          {{name}}

          <button class="change-devoured" data-id="{{id}}" data-devoured="true">
            Time to Eat!
          </button>
        </li>
        {{/unless}} {{/each}}
      </ul>
    </div>
    <div class="col">
      <h2>Hamburgers that you have already eaten!!</h2>

      <ul>
        {{#each burgers}} {{#if devoured}}
        <li>
          {{name}}
        </li>
        {{/if}} {{/each}}
      </ul>
    </div>
  </div>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="col text-center">
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="burger">Hamburger:</label>
          <input type="text" id="burger" name="name">
        </div>

        <div class="form-group">
          <label for="devoured">Did you eat me today?</label>
          <br>
          <input type="radio" name="devoured" value="0"> No, but I will
          <br>
          <input type="radio" name="devoured" value="1" checked> Yes!
        </div>

        <button type="submit">Add Hamburger</button>
      </form>
    </div>
  </div>
</div>